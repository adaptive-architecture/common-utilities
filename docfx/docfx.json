{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api",
      "properties": {
        "BuildDocFx": "true"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          ".site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "llm.txt"
        ]
      }
    ],
    "output": ".site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appTitle": "Adaptive Architecture Common Utilities",
      "_appName": "Common Utilities",
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/favicon.ico",
      "_enableSearch": true,
      "_disableContribution": true,
      "pdf": false
    }
  }
}